@{
    var nombre = (Session["NombreUsuario"] ?? "Usuario").ToString();
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - AlphaStock</title>

    <!-- CSS base (los que ya usas en el proyecto) -->
    <link rel="stylesheet" href="~/StaticFiles/css/normalize.css" />
    <link rel="stylesheet" href="~/StaticFiles/css/material-design-iconic-font.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/StaticFiles/css/Index.css" />

    @RenderSection("styles", required: false)
</head>

<body class="app">

    <!-- HEADER GLOBAL -->
    <header class="lp-header" id="top">
        <div class="lp-container lp-header__inner">

            <a class="lp-brand" href="@Url.Action("Index", "Home")" aria-label="AlphaStock">
                <img src="~/StaticFiles/img/AlphaStockLogo.png" alt="AlphaStock" />
                <div class="lp-brand__text">
                    <strong>AlphaStock</strong>
                    <span>Sistema de inventarios</span>
                </div>
            </a>

            <input class="lp-navcheck" type="checkbox" id="navcheck" />
            <label class="lp-burger" for="navcheck" aria-label="Abrir menú">
                <span></span><span></span><span></span>
            </label>

            <nav class="lp-nav" aria-label="Menú principal" id="mainNav">
                <div class="lp-dd">
                    <button class="lp-dd__btn" type="button">
                        Inicio <span class="lp-caret"></span>
                    </button>
                    <div class="lp-dd__menu">
                        <a href="@Url.Action("Index","Productos")" class="lp-dd__item">Productos</a>
                        <a href="#" class="lp-dd__item">Clientes</a>
                        <a href="#" class="lp-dd__item">Proveedores</a>
                        <a href="#" class="lp-dd__item">Ventas</a>
                        <a href="#" class="lp-dd__item">Materiales</a>
                        <a href="@Url.Action("Index","Roles")" class="lp-dd__item">Roles</a>
                        <a href="@Url.Action("Index","Categorias")" class="lp-dd__item">Categorías</a>
                    </div>
                </div>

                <div class="lp-dd">
                    <button class="lp-dd__btn" type="button">
                        Servicios <span class="lp-caret"></span>
                    </button>
                    <div class="lp-dd__menu">
                        <a href="#" class="lp-dd__item">Bitácora / Auditoría</a>
                        <a href="#" class="lp-dd__item">Garantías</a>
                        <a href="#" class="lp-dd__item">Devoluciones</a>
                    </div>
                </div>

                <div class="lp-dd">
                    <button class="lp-dd__btn" type="button">
                        Otros <span class="lp-caret"></span>
                    </button>
                    <div class="lp-dd__menu">
                        <a href="#" class="lp-dd__item">Automatización</a>
                        <a href="#" class="lp-dd__item">Análisis Predictivo</a>
                        <a href="#" class="lp-dd__item">Reportes</a>
                        <a href="#" class="lp-dd__item">Control Usuarios</a>
                    </div>
                </div>
            </nav>

            <div class="lp-user">
                <div class="lp-user__dd">
                    <button class="lp-user__btn" type="button" aria-label="Menú de usuario">
                        <span class="lp-user__name">@nombre</span>
                        <span class="lp-caret"></span>
                    </button>
                    <div class="lp-user__menu">
                        <a class="lp-user__item" href="@Url.Action("Perfil", "Autenticacion")">Mi cuenta / Ver perfil</a>
                        <a class="lp-user__item danger" href="@Url.Action("Logout", "Autenticacion")">Cerrar sesión</a>
                    </div>
                </div>
            </div>

        </div>
    </header>

    <!-- BODY DE CADA VISTA -->
    @RenderBody()

    <!-- FOOTER GLOBAL -->
    <footer class="lp-footer" id="lpFooter">
        <div class="lp-container lp-footer__inner">

            <div class="f-col f-brand">
                <img class="f-logo" src="~/StaticFiles/img/AlphaStockLogo.png" alt="AlphaStock" />
                <div>
                    <b>AlphaStock</b>
                    <span>Inventarios · Granito & Mármol</span>
                </div>
            </div>

            <div class="f-col f-links">
                <b>Acerca de AlphaStock</b>
                <a href="@Url.Action("Index", "Home")#historia">
                    Nuestra historia
                </a>

            </div>

            <div class="f-col f-social">
                <b>Síguenos:</b>
                <div class="socials">
                    <a href="https://www.instagram.com/somoslachinita?igsh=MW00bTBlMjdtdmI0aA==" aria-label="Instagram">IG</a>
                    <a href="https://x.com/lachinitamarmol?s=21" aria-label="X">X</a>
                    <a href="https://wa.me/50687837892" aria-label="WhatsApp">WA</a>
                </div>
            </div>

            <div class="f-col f-contact">
                <b>Contacto</b>
                <span>+506 8888-8888</span>
                <span>info@alphastock.com</span>
            </div>

        </div>

        <div class="lp-footer__bottom">
            <div class="lp-container">
                AlphaStock. © @DateTime.Now.Year. All Rights Reserved
            </div>
        </div>
    </footer>

    <!-- JS base -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/StaticFiles/js/jquery-1.11.2.min.js"></script>
    <script src="~/StaticFiles/js/scrollReveal.js"></script>
    <script src="~/StaticFiles/js/customScrollReveal.js"></script>
    <script src="~/StaticFiles/js/Index.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
